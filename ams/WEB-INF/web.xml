  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Admin</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <security-role>
    <role-name>admin</role-name>
  </security-role>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>HOD</web-resource-name>
      <url-pattern>/teacher/hod/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>hod</role-name>
    </auth-constraint>
  </security-constraint>

  <security-role>
    <role-name>hod</role-name>
  </security-role>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Teacher</web-resource-name>
      <url-pattern>/teacher/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>hod</role-name>
      <role-name>staff</role-name>
    </auth-constraint>
  </security-constraint>

  <security-role>
    <role-name>hod</role-name>
    <role-name>staff</role-name>
  </security-role>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Auto</web-resource-name>
      <url-pattern>/auto/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>hod</role-name>
      <role-name>staff</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <security-role>
    <role-name>hod</role-name>
    <role-name>staff</role-name>
    <role-name>admin</role-name>
  </security-role>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Staff</web-resource-name>
      <url-pattern>/teacher/staff/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>staff</role-name>
      <role-name>hod</role-name>
    </auth-constraint>
  </security-constraint>

  <security-role>
    <role-name>staff</role-name>
    <role-name>hod</role-name>
  </security-role>

  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>

      <form-error-page>/error.jsp</form-error-page>
    </form-login-config>
  </login-config>


  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Restricted Files</web-resource-name>
      <url-pattern>/data/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>restricted-role</role-name>
    </auth-constraint>
  </security-constraint>
  
  <security-role>
    <role-name>restricted-role</role-name>
  </security-role>

  <error-page>
    <error-code>403</error-code>
    <location>/error.jsp</location>
  </error-page>
  


</web-app>